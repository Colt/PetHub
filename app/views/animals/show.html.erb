<div class="pet">
  <p><%= @animal.name %></p>
  <a href="/animals/<%= @animal.id %>/messages"><%= image_tag @animal.image.url %></a>
</div>

  <div class="actions">
    <% if can? :update, @animal %>
      <%= link_to "Edit", edit_animal_path(@animal) %>
    <% end %>

    <% if can? :destroy, @animal %>
      <%= link_to "Remove", @animal, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
   <h5><%= @animal.name %> is a <%= @animal.age %> year old <%= @animal.breed %> <%= @animal.species %>. </h5>
  </div>
</div>
<div class="threadButton">
  <% if can? :manage, @animal %>
    <%= link_to "Edit Your Pet", edit_animal_path(@animal) %>
    <%= link_to "View the Message Board for this pet", animal_messages_path(@animal) %>
  <% else %>
    <%= link_to "Reply to the Thread for this pet.", animal_messages_path(@animal) %>
  <% end %>
</div>
