<div class="panel-group" id="accordion">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Messages</a>
      </h4>
    </div>
      <div id="collapseOne" class="panel-collapse collapse in">
        <div class="panel-body">
          <% if @messages != nil %>
            <% @messages.sort.each do |message| %>
              <div class="row">
                <div class="col-xs-2">
                  <p>Author:<br> <%=  message.user.name %></p>
                </div>
                <div class="col-xs-2">
                  <img class="humanBoardImage" src="<%=message.user.image%>"/>
                </div>
                <div class="col-xs-4">
                  <p>Title:<br> <%=  message.title %></p>
                </div>
                <div class="col-xs-4">
                  <%=  message.description %><br></br>
                </div>
              </div>
            <% end %>
          <% end %> 
        </div>
      </div>
  </div>
    <% if current_user %>
      <div id="reply">
      <a href="/animals/<%=@animal.id%>/messages/new" class="btn btn-primary btn-md" role="button">Add Your Reply</a>
      </div>
    <% else %>
      <a href="/">Please sign in to add a message to this board.</a>
    <% end %>
</div>